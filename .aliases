
# Helpers
# //////////////////////////////////////////////////////////////////////

alias nuketrash="sudo rm -rvf ~/.Trash/.* && sudo rm -rvf ~/.Trash/*"
alias add-spacer="defaults write com.apple.dock persistent-apps -array-add '{tile-data={}; tile-type=\"spacer-tile\";}' && killall Dock"

# Shortcuts
# //////////////////////////////////////////////////////////////////////

# NOPE
alias sayef="say --voice=\"Allison\""
alias sayem="say --voice=\"Alex\""
alias sayff="say --voice=\"Audrey\""
alias sayfm="say --voice=\"Thomas\""

alias rmf="rm -rf"
alias phpext="php -m | grep"

# Vendor aliases
# //////////////////////////////////////////////////////////////////////

# PHP vendors
alias pusof="phpunit --stop-on-failure"
alias phpdoc="sudo phpdoc.php run -d src -t docs --template=~/.composer/vendor/phpdocumentor/templates/responsive"
alias psr="php-cs-fixer"

# Git
alias git=hub
alias gdt="git difftool"
alias gfpt="git fetch -pt"
alias gaa="git add --all"
alias gcaa="gca --amend"
alias gcaan="gcaa --no-edit"
alias glpp="git lg"

# Brew
alias cask="brew cask"

# Laravel
alias remigrate="php artisan migrate:refresh --seed"

# Composer
alias cr="composer require"
alias cgu="composer global update"
alias cgr="composer global require"
alias recompose="rmf vendor && rmf composer.lock && composer install"

# Rocketeer
alias deploy="git push && artisan deploy:deploy --tests"
alias update="git push && artisan deploy:update"

# Preprocessors
alias recoffee="coffee -o js -cw coffee"
alias recompass="compass clean && compass compile"

