
# Create a new directory and enter it
function mkd() {
  mkdir -p "$@" && cd "$@"
}

# Reclone a repository
function reclone() {
  repository=$1

  rm -rf $repository
  git clone -p $repository
}

# Reclone a repository and go to it
function rego() {
  repository=$1
  branch=$2

  reclone $repository
  cd $repository
  git checkout $branch
}

# Switch PHP version
function usephp() {
  php="php$1"

  ln -sf `brew list $php | grep bin/php -m 1` /usr/local/bin/php
  ln -sf `brew list $php | grep libphp` /usr/local/lib/libphp5.so
  brew link $php --overwrite
  echo "Switched to $php"
  echo `brew info $php | head -1`

  sudo apachectl -k restart
}

# Determine size of a file or total size of a directory
function fs() {
  if du -b /dev/null > /dev/null 2>&1; then
    local arg=-sbh
  else
    local arg=-sh
  fi
  if [[ -n "$@" ]]; then
    du $arg -- "$@"
  else
    du $arg .[^.]* *
  fi
}

# Fixes a repository with PSR and tabs
function psrtabs() {
  php-cs-fixer fix $1 --level=all --fixers=-indentation
}