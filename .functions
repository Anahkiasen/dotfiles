
# Create a new directory and enter it
function mkd() {
  mkdir -p "$@" && cd "$@"
}

# Reclone a repository
function reclone() {
  repository=$1

  rm -rf $repository
  git clone -p $repository
}

# Switch PHP version
function phpswitch() {
  version=$1
  echo $version
}

# Determine size of a file or total size of a directory
function fs() {
  if du -b /dev/null > /dev/null 2>&1; then
    local arg=-sbh
  else
    local arg=-sh
  fi
  if [[ -n "$@" ]]; then
    du $arg -- "$@"
  else
    du $arg .[^.]* *
  fi
}

# Fixes a repository with PSR and tabs
function psrtabs() {
  folder=$1

  php-cs-fixer fix $folder --level=all --fixers=-indentation
}